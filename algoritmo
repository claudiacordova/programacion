#include <iostream>
#include <conio.h>
using namespace std;

int sumar(int a,int b)
{
	int r;
	r=a+b;
	return(r);
}

int multiplicar(int a,int b)
{
	int r=0,i;
	for(i=1;i<=b;i++)
	{ r=r+a;
	}
	return(r);
}

int division(int a,int b)
{
	int r=0;
	while(a>0)
	{a=a-b;
	r++;
	}
	return(r);
}

int factorial(int a)
{
	int f=0,i;
	for(i=1;i<=a;i++)
	{f=f*i;
	}
	return(f);
}


void main()
{
	int x,y,z;
	cout<<"Introducir un numero: ";
	cin>>x;
	cout<<"Introducir otro numero: ";
	cin>>y;
	z=sumar(x,y);
	cout<<"La suma es--->>: "<<z;
	getch();
}

int main()
{
	int x,y,z;
	cout<<"Introducir un numero: ";
	cin>>x;
	cout<<"Introducir otro numero: ";
	cin>>y;
	z=multiplicar(x,y);
	cout<<"La multiplicacion es--->>: "<<z;
	getch();
}

int main()
{
	int x,y,z;
	cout<<"Introducir un numero: ";
	cin>>x;
	cout<<"Introducir otro numero: ";
	cin>>y;
	z=division(x,y);
	cout<<"La division es--->>: "<<z;
	getch();
}

void main()
{
	int x,y,z;
	do
	{cout<<"Introducir un numero: ";
	cin>>x;
	}
	while(x<=0);
	do
	{cout<<"Introducir otro numero: ";
	cin>>y;
	}while(y<=0);
	if(x%y|=0)
	{cout<<"No es divisible";
	}else{

	z=division(x,y);
	cout<<"La division es--->>: "<<z;
	}getch();
}
void main()
	{
	int x,y,z;
	do
	{cout<<"Introducir un numero: ";
	cin>>x;
	}
	while(x<=0);
	z=factorial(x);
	cout<<"La division es--->>: "<<z;
	getch();
}
