#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
#define TAM 100
using namespace std;

float fac(float y);

void main()
{ 
float n,vec[TAM],y,s=0;
int i;
do
{cout<<"Ingrese el tamaÃ±o del vector: ";
cin>>n;
}
while (n>100||n<0);
for(i=1;i<=n;i++)
{fac(i);
s=s+powf(i,2*i)/fac(2*i);
vec[i]=powf(i,2*i)/fac(2*i);
cout<<"vec["<<i<<"]"<<vec[i]<<"\n";
}
cout<<"La suma es: "<<s;
getch();
}


float fac(float y)
{float f=1;
int i;
for(i=2;i<=y;i++)
f=f*i;
return f;
getch();
}
